{
  "name": "core",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "yarn turbo run dev -- --filter=@repo/ui --filter=main", 
    "dev:live": "yarn workspace live dev & yarn workspace @repo/ui dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.2.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
